<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/back_button"
        android:backgroundTint="#D0C3F9"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/goalTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/currentSavedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_savings"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/addAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_amount_to_add"
        android:inputType="numberDecimal"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/addAmountBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_to_saved"
        android:backgroundTint="#A3F9B9"
        android:textColor="#000000"
        android:textStyle="bold"/>
</LinearLayout>
